<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>TODAYS FOLLOW UPS</h1>
    <% companies.forEach(company => { %>
        <p>
            <a href="/company/<%= company.company_id %>">Company ID: <%= company.company_id %></a>
        </p>
    <% }) %>

    <h1>NEW USER:</h1>
    <form action="/submit_form" method="post">
        <label for="url">URL:</label><br>
        <input type="url" id="url" name="url" size="100"><br>
        <label for="contact">Contact:</label><br>
        <input type="text" id="contact" name="contact" size="50"><br>
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" size="50"><br>
        <label for="phone">Phone:</label><br>
        <input type="tel" id="phone" name="phone"><br>
        <label for="notes">Notes:</label><br>
        <textarea id="notes" name="notes"></textarea><br>
        <input type="submit" value="Submit">
    </form>
</body>
</html>