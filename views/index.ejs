<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/search" method="get">
        <input type="text" id="search" name="search" placeholder="Search for a company">
        <input type="submit" value="Search">
    </form>
    <table >
        <tr>
            <td style="border: 1px solid black;">ID</td>
            <td style="border: 1px solid black;">COMPANY</td>
        </tr>
        <% companies.forEach(company => { %>
            
            <tr>
                <td><%= company.company_id %></td>
                <td><%= company.company %></td>
            </tr>
        <% }); %>
    </table>
    <h1>TODAYS FOLLOW UPS:</h1>
    <% companies.forEach(company => { %>
        <p>
            <a href="/company/<%= company.company_id %>">Company ID: <%= company.company_id %></a>
        </p>
    <% }) %>

    <h1>NEW USER:</h1>
    <form action="/submit_form" method="post">
        <label for="url">URL:</label><br>
        <input type="url" id="url" name="url" size="100"><br>
        <label for="contact">Contact:</label><br>
        <input type="text" id="contact" name="contact" size="50"><br>
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" size="50"><br>
        <label for="phone">Phone:</label><br>
        <input type="tel" id="phone" name="phone"><br>
        <label for="notes">Notes:</label><br>
        <textarea id="notes" name="notes"></textarea><br>
        <label for="company">Company:</label><br>
        <input type="text" id="company" name="company"><br>
        <label for="position">Position:</label><br>
        <input type="text" id="position" name="position"><br>
        <input type="submit" value="Submit">
    </form>
</body>
</html>